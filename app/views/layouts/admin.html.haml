!!!
%html
  %head
    %meta{:charset => "UTF-8"}
      %title 
        = content_for?(:title) ? t("admin_site_name") + " - " + yield(:title) : t("admin_site_name")  
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}    
    = csrf_meta_tag
    = stylesheet_link_tag "bootstrap.min.css"
    = stylesheet_link_tag "font-awesome.min.css"
    = stylesheet_link_tag "ionicons.min.css"
    = stylesheet_link_tag "morris/morris.css"
    = stylesheet_link_tag "jvectormap/jquery-jvectormap-1.2.2.css"
    = stylesheet_link_tag "fullcalendar/fullcalendar.css"
    = stylesheet_link_tag "daterangepicker/daterangepicker-bs3.css"
    = stylesheet_link_tag "bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css"
    = stylesheet_link_tag "AdminLTE.css"
    = stylesheet_link_tag "custom.sato7.css"
    
    = yield(:head) 
     
  %body.skin-blue
    / header logo: style can be found in header.less
    %header.header
      =link_to(t("admin_site_name"), admin_root_path(), :class=> "logo")
      %nav.navbar.navbar-static-top{:role => "navigation"}
        / Sidebar toggle button
        %a.navbar-btn.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
    .wrapper.row-offcanvas.row-offcanvas-left
      / Left side column. contains the logo and sidebar
      %aside.left-side.sidebar-offcanvas
        =render :file => "layouts/_menu_admin.html.haml" 
      / Right side column. Contains the navbar and content of the page
      %aside.right-side
        =yield
        / Content Header (Page header)
        / /.content
      / /.right-side
    / ./wrapper
    / add new calendar event modal
    / jQuery include
    = javascript_include_tag "application"
    = javascript_include_tag "jquery-ui-1.10.3.min.js"
    = javascript_include_tag "bootstrap.min.js"
    = javascript_include_tag "raphael-min.js"
    = javascript_include_tag "plugins/morris/morris.min.js"
    = javascript_include_tag "plugins/sparkline/jquery.sparkline.min.js"
    = javascript_include_tag "plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"
    = javascript_include_tag "plugins/jvectormap/jquery-jvectormap-world-mill-en.js"
    = javascript_include_tag "plugins/fullcalendar/fullcalendar.min.js"
    = javascript_include_tag "plugins/jqueryKnob/jquery.knob.js"
    = javascript_include_tag "plugins/daterangepicker/daterangepicker.js"
    = javascript_include_tag "plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"
    = javascript_include_tag "plugins/iCheck/icheck.min.js"
    = javascript_include_tag "AdminLTE/app.js"
    = javascript_include_tag "AdminLTE/dashboard.js"
    = tinymce_assets
    = yield(:footer) 
