/ sidebar: style can be found in sidebar.less
%section.sidebar
  / Sidebar user panel
  .user-panel
    .pull-left.image
      =image_tag("admin_img/avatar3.png", :class => "img-circle")
    .pull-left.info
      %p 
        =t("greeting") + current_user.name 
      =link_to("Sair", logout_path(), :class=>"glyphicon glyphicon-off") 
  / search form
  %form.sidebar-form{:action => "#", :method => "get"}
    .input-group
      %input.form-control{:name => "q", :placeholder => "Search...", :type => "text"}/
      %span.input-group-btn
        %button#search-btn.btn.btn-flat{:name => "seach", :type => "submit"}
          %i.fa.fa-search
  / /.search form
  / sidebar menu: : style can be found in sidebar.less
  %ul.sidebar-menu                   
    %li
      %a{:href => "#{admin_teams_path}"}
        %i.fa.fa-group 
        %span Equipe
        
    %li
      %a{:href => "#{admin_notices_path}"}
        %i.fa.fa-group 
        %span Notícias
    
    %li
      %a{:href => "#{admin_events_path}"}
        %i.fa.fa-group 
        %span Eventos
                
    %li
      %a{:href => "#{admin_sitecontacts_path}"}
        %i.fa.fa-group 
        %span Contatos
        
    %li
      %a{:href => "#{users_path}"}
        %i.fa.fa-group 
        %span Usuários
/ /.sidebar