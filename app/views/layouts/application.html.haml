              <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
          =yield :stylesheets
          = stylesheet_link_tag "media.query.css"
          =stylesheet_link_tag "custom.sato7.css"
  %body
