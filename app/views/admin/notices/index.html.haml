%section.content-header
  %h1
    Notícias  
    %small Control panel
  %ol.breadcrumb
    %li
      %a{:href => "admin_root_path"}
        %i.fa.fa-dashboard
        Home
    %li.active Notícias


/ Main content
%section.content
  .col-xs-12
    %p= link_to "+ Notícia", new_admin_notice_path, :class => "btn btn-primary"
    
    .box.a
      .box-header
        %h3.box-title Notícias

      .box-body.table-responsive.no-padding
        %table.table.table-hover
          %tr
            %th
            %th Título
            %th Chamada
            %th Ações
          - for notice in @notices
            %tr
              %td= image_tag(notice.image.url(:small))
              %td= notice.title
              %td= notice.summary
              %td
                = link_to 'Show', [:admin, notice], :class => "btn btn-default"
                = link_to 'Edit', edit_admin_notice_path(notice), :class => "btn btn-default"
                = link_to 'Destroy', [:admin, notice], :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-default"
        
    %p= link_to "+ Notícia", new_admin_notice_path, :class => "btn btn-primary"