%section.content-header
  %h1
    Equipe
    %small Control panel
  %ol.breadcrumb
    %li
      %a{:href => "admin_root_path"}
        %i.fa.fa-dashboard
        Home
    %li.active Equipe


/ Main content
%section.content
  .col-xs-12
    %p= link_to "+ Membro", new_admin_team_path, :class => "btn btn-primary"
    
    .box.a
      .box-header
        %h3.box-title Equipe

      .box-body.table-responsive.no-padding
      
        %table.table.table-hover
          %tr
            %th 
            %th Nome
            %th Empresa
            %th Cargo
            %th Ações
          - for team in @teams
            %tr
              %td= image_tag(team.image.url(:small))
              %td= team.name
              %td= team.company
              %td= team.position
              %td
                = link_to 'Show', [:admin, team], :class => "btn btn-default"
                = link_to 'Edit', edit_admin_team_path(team), :class => "btn btn-default"
                = link_to 'Destroy', [:admin, team], :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-default"
              
        
    %p= link_to "+ Membro", new_admin_team_path, :class => "btn btn-primary"
